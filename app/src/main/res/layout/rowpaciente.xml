<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectpacelement">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8">

        <TextView
            android:paddingLeft="@dimen/paddingtextmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontlabel"
            android:paddingTop="@dimen/paddingtexrowpac"
            android:text="HOLA"
            android:id="@+id/tvapellido" />

        <TextView
        android:paddingLeft="@dimen/paddingtextmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontnombre"
        android:paddingTop="@dimen/paddingtexrowpac"
        android:text="HOLA"
        android:id="@+id/tvnombre" />

    </LinearLayout>

    <Button
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/strokebg"
        android:layout_marginRight="@dimen/strokebg"
        android:layout_marginBottom="@dimen/strokebg"
        android:layout_height="match_parent"
        android:background="@drawable/trash"
        android:id="@+id/bteliminar"
        android:layout_weight="2" />
</LinearLayout>