                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tvmargintop"
                            android:gravity="center_horizontal"
                            android:text="@string/Electrolitos"
                            android:textSize="@dimen/fonttitle"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tvelectrolitomargintop" >

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="@string/potasio"
                                android:textSize="@dimen/fontlabel" />

                            <TextView
                                android:id="@+id/tvpotasio"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/stvres"
                                android:gravity="center_horizontal"
                                android:paddingBottom="@dimen/etintspace"
                                android:paddingLeft="@dimen/tvelectrolpaddingleft"
                                android:paddingTop="@dimen/etintspace"
                                android:text=""
                                android:textSize="@dimen/fontelectrol" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tvmargintop"
                            android:gravity="center_horizontal" >

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="@string/sodio"
                                android:textSize="@dimen/fontlabel" />

                            <TextView
                                android:id="@+id/tvsodio"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/stvres"
                                android:gravity="center_horizontal"
                                android:paddingBottom="@dimen/etintspace"
                                android:paddingLeft="@dimen/tvelectrolpaddingleft"
                                android:paddingTop="@dimen/etintspace"
                                android:text=""
                                android:textSize="@dimen/fontelectrol" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tvelectrolitomargintop" >

                            <TextView
                                android:id="@+id/tvx"
