                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="@string/glucosa"
                                android:textSize="@dimen/fontlabel" />

                            <TextView
                                android:id="@+id/tvglucosa"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/stvres"
                                android:gravity="center_horizontal"
                                android:paddingBottom="@dimen/etintspace"
                                android:paddingLeft="@dimen/tvelectrolpaddingleft"
                                android:paddingTop="@dimen/etintspace"
                                android:text=""
