<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgBlue"
    android:paddingTop="@dimen/tvmargintop"
    android:id="@+id/llinfopacroot"
    tools:context="com.example.ruelas.ivanluis4e.Activity_Infopac"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"></LinearLayout>
    <LinearLayout
        android:background="@drawable/rectbglayout"
        android:id="@+id/llmaincontainer"
        android:layout_marginBottom="@dimen/tvmargintop"
        android:layout_weight="12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:paddingBottom="@dimen/tvmargintop"
            android:layout_height="wrap_content"
            android:layout_weight="20">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llapellidos">
                <Button
                    android:text="@string/lowerthan"
                    android:textSize="@dimen/stringex"
                    android:id="@+id/btloadprevious"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvresapellidopac"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/fonttitlepac"
                android:layout_weight="10"
                android:text="@string/apellidopac"/>
                <Button
                    android:text="@string/greaterthan"
                    android:textSize="@dimen/stringex"
                    android:id="@+id/btloadnext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
            android:id="@+id/tvresnombrepac"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/fontnombre"
            android:text="@string/nombrepac"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/llfecha"
                android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tvfecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontnombre"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llresultadoscont"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/llresultadosizq"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/llrespeso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="@string/pesores"
                        android:textSize="@dimen/fontlabelres"
                        />
                    <TextView
                        android:id="@+id/tvrespeso"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="100kg"
                        android:textSize="@dimen/fontlabel"
                        />
                </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:id="@+id/llrestemperatura"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="@string/temperaturares"
                            android:textSize="@dimen/fontlabelres"
                            />
                        <TextView
                            android:id="@+id/tvrestemp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="36Â°C"
                            android:textSize="@dimen/fontlabel"
                            />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_weight="2"
                    android:id="@+id/llresultadosder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/llrestalla"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="@string/tallares"
                            android:textSize="@dimen/fontlabelres"
                            />
                        <TextView
                            android:id="@+id/tvrestalla"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1.75m"
                            android:textSize="@dimen/fontlabel"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
        android:background="@drawable/bgtopbottom"
        android:id="@+id/lltvdetalles"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/Detalles"
                android:textColor="#728df9"
                android:textSize="@dimen/fontlabel"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />
        <ImageView
            android:paddingTop="@dimen/ivfapadding"
            android:paddingBottom="@dimen/ivfapadding"
            android:id="@+id/ivfadetalles"
            android:layout_width="@dimen/fontlabel"
            android:layout_height="match_parent"
            android:background="@drawable/flechitaabajo"/>
        </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/svdetalles"
