                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tvmargintop"
                            android:gravity="center_horizontal"
                            android:text="@string/RB"
                            android:textSize="@dimen/fontlabel" />

                        <TextView
                            android:id="@+id/tvrequerimientobasal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/stvres"
                            android:gravity="center_horizontal"
                            android:paddingBottom="@dimen/etintspace"
                            android:paddingTop="@dimen/etintspace"
                            android:text=""
                            android:textSize="@dimen/fontvar" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tvmargintop"
                            android:gravity="center_horizontal"
                            android:text="@string/PI"
                            android:textSize="@dimen/fontlabel" />

                        <TextView
                            android:id="@+id/tvperdidasins"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/stvres"
                            android:gravity="center_horizontal"
                            android:paddingBottom="@dimen/etintspace"
                            android:paddingTop="@dimen/etintspace"
                            android:text=""
                            android:textSize="@dimen/fontvar" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tvmargintop"
                            android:gravity="center_horizontal"
                            android:text="@string/PS"
                            android:textSize="@dimen/fontlabel" />

                        <TextView
                            android:id="@+id/tvperdidassen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/stvres"
                            android:gravity="center_horizontal"
                            android:paddingBottom="@dimen/etintspace"
