<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/popuppadding"
    android:paddingRight="@dimen/popuppadding"
    android:background="@drawable/rectmenuelement"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="@dimen/tvmargintop"
        android:layout_width="wrap_content"
        android:textSize="@dimen/advertenciatext"
        android:text="@string/tvavertencia"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:id="@+id/tvadvertenciatext"
        android:inputType="textMultiLine"
        android:layout_marginTop="@dimen/tvmargintop"
        android:layout_width="200dp"
        android:textSize="@dimen/advertenciatextmin"
        android:text="@string/tvavertencia"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btpopupeliminar"
            android:layout_marginTop="@dimen/tvmargintop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingboton"
            android:text="@string/eliminar"
            android:textSize="@dimen/bteliminar"
            android:background="@drawable/recbotondefault"/>
        <Button
            android:id="@+id/btpopupcancelar"
            android:layout_marginTop="@dimen/tvmargintop"
            android:layout_marginBottom="@dimen/bottomspacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingboton"
            android:text="@string/cancelar"
            android:textSize="@dimen/bteliminar"
            android:background="@drawable/recbotondefault"/>
    </LinearLayout>
</LinearLayout>